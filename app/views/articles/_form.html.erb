<%= form_with model: article do |form| %>
  <div class="flex flex-col w-full space-y-4 pb-4">
    <div class="flex items-center space-x-2">
      <%= form.label :title, class:"font-medium text-gray-800 dark:text-gray-100", for: "article_title" %>
      <%= form.text_field :title, class:"px-3 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 w-full", id: "article_title" %>

      <% if article.errors.key?(:title) %>
        <div class="text-red-500 text-sm mt-1">
          <%= article.errors.full_messages_for(:title).join(", ") %>
        </div>
      <% end %>
    </div>

    <div class="flex items-center space-x-2">
      <%= form.label :body, class:"font-medium text-gray-800 dark:text-gray-100", for: "article_body" %>
      <%= form.text_area :body, class:"px-3 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 w-full h-40", id: "article_body" %>
      <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
      <% end %>
    </div>

    <div class="flex items-center space-x-2">
      <%= form.file_field :image, class:"px-3 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500", id: "article_image" %>
    </div>

    <div class="flex items-center space-x-2">
       <%= form.label :status, class:"font-medium text-gray-100", for: "article_status" %>
       <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public', class:"appearance-none w-full bg-white border border-gray-300 rounded-md text-gray-700 focus:ring-indigo-500 focus:border-indigo-500", id: "article_status" %>
    </div>
  </div>

  <div class="flex items-center space-x-4">
    <%= form.submit class:"inline-flex items-center justify-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium w-40", value: "Create Article" %>
    <%= link_to "Go Back", articles_path, class:"inline-flex items-center justify-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium w-40" %>
  </div>
<% end %>

