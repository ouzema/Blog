<%= link_to "Create New Article", new_article_path(@article), class:"inline-flex items-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium" %>

<div class="container mx-auto px-4 pt-10 pb-20">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <article class="shadow-md rounded-lg overflow-hidden bg-white dark:bg-gray-800 cursor-pointer hover:shadow-lg">
          <div class="h-64 overflow-hidden">
            <% if article.image.present? %>
              <%= link_to(image_tag(article.image, class: "w-full h-full object-cover transition transform hover:scale-110"), article, class: "shadow-md rounded-lg overflow-hidden bg-white dark:bg-gray-800 hover:shadow-lg cursor-pointer") %>
            <% else %>
            <% end %>
          </div>
          <div class="p-4">
            <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100 hover:text-indigo-500 truncate"><%= link_to article.title, article %></h2>
            <p class="text-xl text-gray-700 dark:text-gray-300 overflow-hidden line-clamp-1">
              <%= truncate(article.body, length: 30) %>
              <%= link_to "Read More", article, class:"inline-flex items-center px-3 py-2 text-sm font-medium text-blue-500 hover:text-blue-700" %>
            </p>
          </div>
        </article>
      <% end %>
    <% end %>
  </div>
</div>
