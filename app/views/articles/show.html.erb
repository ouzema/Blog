<div class="container mx-auto px-4 pt-10 pb-20">
  <div class="flex flex-col gap-8 md:flex-row md:justify-between">
    <div class="flex-1">
      <article class="shadow-md rounded-lg overflow-hidden bg-white dark:bg-gray-800 hover:shadow-lg">
        <div class="h-64 overflow-hidden">
          <% if @article.image.present? %>
            <%= image_tag @article.image, class:"w-full h-full object-cover" %>
          <% else %>
          <% end %>
        </div>
      </article>

      <div class="mt-8 mb-8">
        <h2 class="text-xl font-bold text-gray-700 dark:text-gray-300 mb-4">Article Details:</h2>
        <p class="text-xl text-gray-700 dark:text-gray-300"><%= @article.body %></p>
      </div>

      </div>
</div>



      <div class="container mx-auto px-4 pt-10 pb-20">
        <div class="flex flex-col gap-8 md:flex-row md:justify-between">
          <div class="flex-1">
            </div>

          <div class="w-full md:grid md:grid-cols-2 md:gap-8 mt-8 md:mt-0">
            <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-auto max-h-[600px] px-4">
              <h2 class="text-xl font-bold text-gray-700 dark:text-gray-300 mb-4">Add a Comment:</h2>
              <%= render 'comments/form' %>

              <div class="flex items-center justify-end mt-4">
                <%= link_to "Edit", edit_article_path(@article), class:"inline-flex items-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium" %>
                <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class:"ml-4 inline-flex items-center px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-700 font-medium" %>
              </div>
            </div>

            <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-auto max-h-[600px] px-4">
              <h2 class="text-xl font-bold text-gray-700 dark:text-gray-300 mb-4">Comments:</h2>
              <div class="comment-section">
                <%= render @article.comments %>
              </div>
            </div>
          </div>
        </div>
      </div>

  </div>
</div>
