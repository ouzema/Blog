<% unless comment.archived? || !comment.commenter %>
  <div class="border-b border-gray-200 py-4 mb-4 flex items-start">
    <div class="flex-grow overflow-x-auto"> <div class="flex items-center">
        <strong class="font-medium text-gray-800 mr-2">Commenter:</strong>
        <span class="text-gray-700"><%= comment.commenter %></span>
      </div>
      <p class="mt-2 text-gray-700"><%= comment.body %></p>
    </div>
    <div class="flex-shrink-0 ml-auto"> <%= link_to "Delete Comment", [comment.article, comment], method: :delete, data: { confirm: "Are you sure?" }, class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>
<% end %>
