<div class="container mx-auto px-4 py-16">
  <div class="max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-8 text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class:"block mb-2 text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Send me reset password instructions", class:"inline-flex items-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
