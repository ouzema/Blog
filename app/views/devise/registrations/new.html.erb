<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field items-center justify-center">
  <label for="profile_picture" class="cursor-pointer">
    <div class="flex items-center justify-center">
      <% if current_user && current_user.profile_picture.attached? %>
        <%= image_tag current_user.profile_picture.variant(resize_to_limit: [100, 100]), class: "w-20 h-20 rounded-full object-cover", id: "profile_picture_preview" %>
      <% else %>
        <%= image_tag "https://shop.ambacaftermarket.com//themes/ambac/images/user-edit.svg", alt: "Add Image", class: "w-32 h-32 rounded-full", id: "profile_picture_preview" %>
      <% end %>
    </div>
  </label>
  <%= f.file_field :profile_picture, id: "profile_picture", class: "hidden", onchange: "previewImage(this)" %>
</div>


  <div class="mb-6">
    <%= f.label :first_name, "First Name", class:"block mb-2 text-sm font-medium text-gray-700" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :last_name, "Last Name", class:"block mb-2 text-sm font-medium text-gray-700" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :email, class:"text-sm font-medium text-gray-700 block mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :username, "Username", class:"text-sm font-medium text-gray-700 block mb-2" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :password, class:"text-sm font-medium text-gray-700 block mb-2" %>
    <% if @minimum_password_length %>
      <p class="text-xs text-gray-500 mb-1"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation, class:"text-sm font-medium text-gray-700 block mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>


  <div class="flex justify-center">
    <%= f.submit "Sign up", class:"inline-flex items-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
