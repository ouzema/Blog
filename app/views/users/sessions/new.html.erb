<div class="container mx-auto px-4 py-16">
  <div class="max-w-md mx-auto">
    <h2 class="text-2xl font-bold mb-8 text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :login, class: "block mb-2 text-sm font-medium text-gray-700" %>
        <%= f.text_field :login, autofocus: true, autocomplete: "username", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class:"w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 focus:ring-2" %>
          <label for="remember_me" class="ml-2 block text-sm text-gray-700">
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end %>

      <div class="flex justify-center">
        <%= f.submit "Log in", class:"inline-flex items-center px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-700 font-medium" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
